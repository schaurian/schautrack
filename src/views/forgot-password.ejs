<%- include('partials/header', { title: 'Forgot Password' }) %>
  <section class="panel">
    <div class="panel-header">
      <div>
        <p class="eyebrow">Account recovery</p>
        <h1>Forgot password</h1>
      </div>
      <a href="/login" class="ghost">Back to login</a>
    </div>
    <% if (error) { %>
      <div class="alert danger"><%= error %></div>
    <% } %>
    <% if (!smtpConfigured) { %>
      <div class="alert danger">Password recovery is not available. Please contact support at <%= supportEmail %>.</div>
    <% } else { %>
      <p class="muted">Enter your email address and we'll send you a code to reset your password.</p>
      <form action="/forgot-password" method="POST" class="stack">
        <label class="field">
          <span>Email</span>
          <input type="email" name="email" required autocomplete="email" placeholder="you@example.com">
        </label>
        <button type="submit" class="primary">Send reset code</button>
      </form>
    <% } %>
  </section>
<%- include('partials/footer') %>
