<%- include('partials/header', { title: 'Forgot Password' }) %>
  <section class="panel">
    <div class="panel-header">
      <div>
        <p class="eyebrow">Account recovery</p>
        <h1>Forgot password</h1>
      </div>
      <a href="/login" class="ghost">Back to login</a>
    </div>
    <% if (error) { %>
      <div class="alert danger"><%= error %></div>
    <% } %>
    <% if (!smtpConfigured) { %>
      <div class="alert danger">Password recovery is not available.<% if (supportEmail) { %> Please contact support at <%= supportEmail %>.<% } %></div>
    <% } else { %>
      <p class="muted">Enter your email address. If an account exists, we'll send you a reset code.</p>
      <form action="/forgot-password" method="POST" class="stack">
        <label class="field">
          <span>Email</span>
          <input type="email" name="email" value="<%= email %>" required autocomplete="email" placeholder="you@example.com">
        </label>
        <div class="field">
          <span>Enter the text shown below</span>
          <div class="captcha-image"><%- captchaSvg %></div>
          <input type="text" name="captcha" required autocomplete="off" placeholder="Enter captcha">
        </div>
        <button type="submit" class="primary">Send reset code</button>
      </form>
    <% } %>
  </section>
<%- include('partials/footer') %>
