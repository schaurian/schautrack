<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <title><%= title ? `${title} | Schautrack` : 'Schautrack | Open-Source AI Calorie Tracker' %></title>
  <meta name="description" content="<%= metaDescription || 'Schautrack is a free, open-source calorie tracking app with AI-powered food photo estimation. Self-hostable, privacy-focused, and simple to use.' %>">
  <meta name="keywords" content="calorie tracker, calorie counter, AI food tracking, open source, self-hosted, weight loss, nutrition, diet app">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="https://schautrack.schauer.to<%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="<%= title ? `${title} | Schautrack` : 'Schautrack | Open-Source AI Calorie Tracker' %>">
  <meta property="og:description" content="<%= metaDescription || 'Free, open-source calorie tracking with AI photo estimation. Self-hostable and privacy-focused.' %>">
  <meta property="og:url" content="https://schautrack.schauer.to<%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
  <meta property="og:image" content="https://schautrack.schauer.to/logo.png">
  <meta property="og:site_name" content="Schautrack">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="<%= title ? `${title} | Schautrack` : 'Schautrack | Open-Source AI Calorie Tracker' %>">
  <meta name="twitter:description" content="<%= metaDescription || 'Free, open-source calorie tracking with AI photo estimation.' %>">
  <meta name="twitter:image" content="https://schautrack.schauer.to/logo.png">

  <link rel="icon" href="/logo.png" type="image/png">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="mobile-overlay" id="mobileOverlay"></div>
  <header class="shell top-bar">
    <div class="brand">
      <div class="brand-mark">
        <img src="/logo.png" alt="Schautrack logo" class="brand-logo">
      </div>
        <div>
          <div class="brand-name">Schautrack</div>
        <div class="brand-sub">Every day counts</div>
      </div>
    </div>
    <button class="hamburger" id="hamburger" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  <nav class="nav" id="mobileNav">
    <% if (currentUser) { %>
      <% if (isAdmin) { %><a href="/admin" class="nav-link <%= activePage === 'admin' ? 'active' : '' %>">Admin</a><% } %>
      <a href="/dashboard" class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
      <a href="/settings" class="nav-link <%= activePage === 'settings' ? 'active' : '' %>">Settings</a>
      <form action="/logout" method="POST" class="inline-form">
        <button type="submit" class="ghost">Logout</button>
      </form>
      <% } else { %>
        <a href="/login" class="nav-link">Login</a>
        <a href="/register" class="nav-link">Register</a>
      <% } %>
    </nav>
  </header>
  <script>
    // Mobile menu toggle
    (function() {
      const hamburger = document.getElementById('hamburger');
      const mobileNav = document.getElementById('mobileNav');
      const overlay = document.getElementById('mobileOverlay');

      if (hamburger && mobileNav && overlay) {
        function toggleMenu() {
          hamburger.classList.toggle('active');
          mobileNav.classList.toggle('active');
          overlay.classList.toggle('active');
          document.body.style.overflow = mobileNav.classList.contains('active') ? 'hidden' : '';
        }

        hamburger.addEventListener('click', toggleMenu);
        overlay.addEventListener('click', toggleMenu);

        // Close menu when clicking nav links
        const navLinks = mobileNav.querySelectorAll('.nav-link, .ghost');
        navLinks.forEach(link => {
          link.addEventListener('click', () => {
            if (window.innerWidth <= 768) {
              toggleMenu();
            }
          });
        });
      }
    })();
  </script>
  <main class="shell">
