<%- include('partials/header', { title: 'Admin' }) %>
  <% if (feedback) { %>
    <div class="alert <%= feedback.type === 'error' ? 'danger' : 'success' %>"><%= feedback.message %></div>
  <% } %>

  <section class="panel version-panel">
    <div class="panel-header">
      <div>
        <p class="eyebrow">System</p>
        <h2>Version Status</h2>
      </div>
      <button id="check-version-btn" class="ghost">Check for updates</button>
    </div>
    <div id="version-info" class="version-info">
      <div class="version-row">
        <span class="version-label">Current version:</span>
        <span id="current-version" class="version-value"><%= typeof buildVersion !== 'undefined' && buildVersion ? buildVersion : 'dev' %></span>
      </div>
      <div class="version-row">
        <span class="version-label">Latest version:</span>
        <span id="latest-version" class="version-value">-</span>
      </div>
      <div class="version-row">
        <span class="version-label">Status:</span>
        <span id="version-status" class="status-chip">Click to check</span>
      </div>
    </div>
  </section>

  <section class="panel">
    <div class="panel-header">
      <div>
        <p class="eyebrow">Configuration</p>
        <h2>Application Settings</h2>
      </div>
      <a href="/dashboard" class="ghost">Back to dashboard</a>
    </div>
    <p class="muted small">Settings controlled by environment variables cannot be changed here.</p>

    <div class="admin-settings">
      <% const settingLabels = {
        support_email: 'Support Email',
        imprint_name: 'Imprint Name',
        imprint_address: 'Imprint Address',
        imprint_email: 'Imprint Email',
        enable_legal: 'Enable Legal Pages',
        openai_api_key: 'OpenAI API Key (Global)',
        claude_api_key: 'Claude API Key (Global)',
        ai_daily_limit: 'AI Daily Limit',
      }; %>
      <% for (const [key, setting] of Object.entries(settings)) { %>
        <% const isApiKey = key.includes('api_key'); %>
        <form action="/admin/settings" method="POST" class="admin-setting-row">
          <input type="hidden" name="key" value="<%= key %>">
          <label class="field">
            <span><%= settingLabels[key] || key %></span>
            <div class="input-with-badge">
              <input
                type="<%= isApiKey ? 'password' : 'text' %>"
                name="value"
                value="<%= setting.value || '' %>"
                placeholder="<%= setting.source === 'none' ? 'Not set' : (isApiKey && setting.value ? '••••••••' : '') %>"
                <%= setting.source === 'env' ? 'disabled' : '' %>
                autocomplete="<%= isApiKey ? 'off' : 'on' %>"
              >
              <% if (setting.source === 'env') { %>
                <span class="badge env">ENV</span>
              <% } else if (setting.source === 'db') { %>
                <span class="badge db">DB</span>
              <% } %>
            </div>
            <% if (isApiKey) { %>
              <p class="muted small">Global key used when users don't have their own. Leave blank to clear.</p>
            <% } %>
            <% if (key === 'ai_daily_limit') { %>
              <p class="muted small">Max AI requests per user per day (using global key). Leave blank or 0 for unlimited.</p>
            <% } %>
          </label>
          <% if (setting.source !== 'env') { %>
            <button type="submit" class="ghost">Save</button>
          <% } %>
        </form>
      <% } %>
    </div>
  </section>

  <section class="panel">
    <div class="panel-header">
      <div>
        <p class="eyebrow">Users</p>
        <h2>Registered Users (<%= users.length %>)</h2>
      </div>
    </div>

    <div class="users-list">
      <% for (const u of users) { %>
        <div class="user-row">
          <div class="user-info">
            <span class="user-email <%= u.id === user.id ? 'admin-current-user' : '' %>">
              <%= u.email %><% if (u.id === user.id) { %> <span class="muted">(you)</span><% } %>
            </span>
            <span class="user-meta">
              <% if (u.email_verified) { %>
                <span class="status-chip success">Verified</span>
              <% } else { %>
                <span class="status-chip">Unverified</span>
              <% } %>
              <span class="muted">Joined <%= u.created_at ? new Date(u.created_at).toLocaleDateString() : 'Unknown' %></span>
            </span>
          </div>
          <div class="user-actions">
            <% if (u.id !== user.id) { %>
              <form action="/admin/users/<%= u.id %>/delete" method="POST" class="inline-form" onsubmit="return confirm('Delete user <%= u.email %>? This cannot be undone.');">
                <button type="submit" class="ghost danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </section>

<style>
.admin-settings {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  margin-top: var(--space-md);
}

.admin-setting-row {
  display: flex;
  align-items: flex-end;
  gap: var(--space-md);
}

.admin-setting-row .field {
  flex: 1;
}

.input-with-badge {
  position: relative;
  display: flex;
  align-items: center;
}

.input-with-badge input {
  flex: 1;
  padding-right: 50px;
}

.input-with-badge input:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.badge {
  position: absolute;
  right: 8px;
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  padding: 2px 6px;
  border-radius: 4px;
}

.badge.env {
  background: var(--accent);
  color: white;
}

.badge.db {
  background: var(--accent-2);
  color: white;
}

.users-list {
  display: flex;
  flex-direction: column;
  margin-top: var(--space-md);
}

.user-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-md) 0;
  border-bottom: 1px solid var(--stroke);
  gap: var(--space-md);
}

.user-row:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  min-width: 0;
}

.user-email {
  font-size: 1rem;
  word-break: break-all;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: 0.85rem;
  flex-wrap: wrap;
}

.user-actions {
  flex-shrink: 0;
}

.status-chip {
  display: inline-block;
  font-size: 11px;
  font-weight: 600;
  padding: 3px 10px;
  border-radius: 10px;
  background: var(--stroke);
  color: var(--muted);
}

.status-chip.success {
  background: var(--success);
  color: white;
}

.inline-form {
  display: inline;
}

.admin-current-user {
  font-weight: 600;
}

@media (max-width: 768px) {
  .admin-setting-row {
    flex-direction: column;
    align-items: stretch;
  }

  .admin-setting-row button {
    align-self: flex-end;
  }
}

.version-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
  margin-top: var(--space-md);
}

.version-row {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.version-label {
  color: var(--muted);
  min-width: 120px;
}

.version-value {
  font-family: monospace;
  font-size: 0.95rem;
}

.status-chip.up-to-date {
  background: var(--success);
  color: white;
}

.status-chip.outdated {
  background: var(--warning, #f59e0b);
  color: white;
}

.status-chip.ahead,
.status-chip.staging {
  background: var(--accent-2);
  color: white;
}

.status-chip.development {
  background: var(--stroke);
  color: var(--muted);
}

.status-chip.error {
  background: var(--danger);
  color: white;
}

#check-version-btn:disabled {
  opacity: 0.6;
  cursor: wait;
}
</style>

<script>
document.getElementById('check-version-btn').addEventListener('click', async function() {
  const btn = this;
  const statusEl = document.getElementById('version-status');
  const latestEl = document.getElementById('latest-version');
  const currentEl = document.getElementById('current-version');
  const currentVersion = currentEl.textContent.trim();

  btn.disabled = true;
  btn.textContent = 'Checking...';
  statusEl.className = 'status-chip';
  statusEl.textContent = 'Checking...';

  try {
    // Fetch directly from GitLab API (client-side, avoids container network restrictions)
    const res = await fetch('https://gitlab.com/api/v4/projects/schauer.to%2Fschautrack/repository/tags?per_page=1');

    if (!res.ok) {
      throw new Error('Failed to fetch tags');
    }

    const tags = await res.json();
    const latestVersion = tags[0]?.name?.replace(/^v/, '') || null;

    latestEl.textContent = latestVersion || '-';

    let status = 'unknown';
    const isSemver = /^\d+\.\d+\.\d+$/.test(currentVersion);

    if (currentVersion === 'dev') {
      status = 'development';
    } else if (!isSemver) {
      // Non-semver version (staging-123, feature-branch-45, etc.)
      status = 'staging';
    } else if (latestVersion) {
      if (currentVersion === latestVersion) {
        status = 'up-to-date';
      } else {
        // Simple semver comparison
        const currentParts = currentVersion.split('.').map(Number);
        const latestParts = latestVersion.split('.').map(Number);

        for (let i = 0; i < 3; i++) {
          if ((currentParts[i] || 0) < (latestParts[i] || 0)) {
            status = 'outdated';
            break;
          } else if ((currentParts[i] || 0) > (latestParts[i] || 0)) {
            status = 'ahead';
            break;
          }
        }
        if (status === 'unknown') status = 'up-to-date';
      }
    }

    const statusLabels = {
      'up-to-date': 'Up to date',
      'outdated': 'Update available',
      'ahead': 'Ahead of release',
      'staging': 'Staging build',
      'development': 'Development',
      'unknown': 'Unknown'
    };
    statusEl.className = 'status-chip ' + status;
    statusEl.textContent = statusLabels[status] || status;
  } catch (err) {
    statusEl.className = 'status-chip error';
    statusEl.textContent = 'Failed to check';
    latestEl.textContent = '-';
  }

  btn.disabled = false;
  btn.textContent = 'Check for updates';
});

// Auto-check on page load
document.getElementById('check-version-btn').click();
</script>
<%- include('partials/footer') %>
